        {
            "name": "getComments",
            "description": "Returns all comments for an issue.",
            "capabilities": {
                "response_semantics": {
                    "data_path": "$",
                    "properties": {
                        "title": "$.startAt",
                        "subtitle": "$.maxResults"
                    },
                    "static_template": {
                        "type": "AdaptiveCard",
                        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
                        "version": "1.5",
                        "body": [
                            {
                                "type": "TextBlock",
                                "text": "startAt: ${if(startAt, startAt, 'N/A')}",
                                "wrap": true
                            },
                            {
                                "type": "TextBlock",
                                "text": "maxResults: ${if(maxResults, maxResults, 'N/A')}",
                                "wrap": true
                            },
                            {
                                "type": "TextBlock",
                                "text": "total: ${if(total, total, 'N/A')}",
                                "wrap": true
                            },
                            {
                                "type": "Container",
                                "$data": "${comments}",
                                "items": [
                                    {
                                        "type": "TextBlock",
                                        "text": "comments.id: ${if(id, id, 'N/A')}",
                                        "wrap": true
                                    },
                                    {
                                        "type": "TextBlock",
                                        "text": "comments.author.accountId: ${if(author.accountId, author.accountId, 'N/A')}",
                                        "wrap": true
                                    }
                                ]
                            }
                        ]
                    }
                }
            }
        },
